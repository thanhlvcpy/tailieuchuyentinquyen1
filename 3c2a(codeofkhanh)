#include <bits/stdc++.h>
 
using namespace std;
 
int a[1001];
int l;
bool f = false;
 
int bs(int i, int k)
{
    f = false;
    int li = i + 1;
    int ri = l - 1;
 
    while (li <= ri)
    {
        int m = (li + ri) / 2;
        if (a[m] == k)
        {
            f = true;
            return m;
        }
        if (a[m] > k) ri = m - 1;
        else if (a[m] < k) li = m + 1;
    }
    return -1;
}
 
int main()
{
    freopen("input.inp", "r", stdin);
    freopen("output.out", "w", stdout);
    cin >> l;
    for (int i = 0; i < l; i++)
    {
        cin >> a[i];
    }
    for (int i = 0; i < l; i++)
    {
        for (int j = i; j <= l; j++)
        {
            int k = bs(i, -a[i] -a[j]);
            if (f)
            {
                cout << i << " " << j << " " << k;
                return 0;
            }
        }
    }
    return 0;
}
